{
  "reportUnusedDisableDirectives": true,
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:import/typescript",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["import", "@typescript-eslint"],
  "rules": {
    // typescript-eslint overrides.
    "no-duplicate-imports": "off",
    "@typescript-eslint/no-duplicate-imports": ["error"],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],

    "import/extensions": ["error", "never", { "css": "always", "png": "always", "scss": "always", "svg": "always" }],
    "max-len": ["error", { "code": 120, "ignoreTemplateLiterals": true, "tabWidth": 2 }],
    "no-console": ["error", { "allow": ["error"] }],
    "sort-imports": [
      "error",
      { "allowSeparatedGroups": true, "memberSyntaxSortOrder": ["multiple", "single", "all", "none"] }
    ],
    "sort-keys": ["off"]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/resolver": {
      "typescript": {
        "project": "."
      }
    }
  }
}
